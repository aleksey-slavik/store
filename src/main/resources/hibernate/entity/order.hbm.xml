<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.globallogic.store.model.Order" table="orders" catalog="public">
        <id name="id" type="java.lang.Long">
            <column name="id"/>
            <generator class="identity"/>
        </id>

        <property name="totalCost" type="java.lang.Double">
            <column name="total_cost" not-null="true"/>
        </property>

        <many-to-one name="user" class="com.globallogic.store.model.User" fetch="select" lazy="false" cascade="all">
            <column name="user_id" not-null="true"/>
        </many-to-one>

        <property name="status">
            <column name="status" not-null="true"/>
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.globallogic.store.model.Status</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <set name="items" table="order_item" catalog="public" fetch="select" lazy="false" cascade="all">
            <key>
                <column name="order_id" not-null="true"/>
            </key>

            <one-to-many class="com.globallogic.store.model.OrderItem"/>
        </set>

    </class>
</hibernate-mapping>