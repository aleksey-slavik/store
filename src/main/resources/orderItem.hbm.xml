<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.globallogic.store.model.OrderItem" table="order_item" catalog="public">
        <id name="id" type="java.lang.Long">
            <column name="id"/>
            <generator class="identity"/>
        </id>

        <!--<many-to-one name="order" class="com.globallogic.store.model.Order" fetch="select" lazy="false">
            <column name="order_id" not-null="true"/>
        </many-to-one>-->

        <many-to-one name="product" class="com.globallogic.store.model.Product" fetch="select" lazy="false">
            <column name="product_id" not-null="true"/>
        </many-to-one>

        <property name="quantity" type="java.lang.Integer">
            <column name="quantity" not-null="true"/>
        </property>

        <property name="price" type="java.lang.Double">
            <column name="price" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>