<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.globallogic.store.model.Order" table="orders" catalog="public">

        <id name="id" type="java.lang.Long">
            <column name="id"/>
            <generator class="identity"/>
        </id>

        <property name="totalCost" type="java.lang.Double">
            <column name="total_cost" not-null="true"/>
        </property>

        <many-to-one name="user" class="com.globallogic.store.model.User" fetch="select" lazy="false">
            <column name="user_id" not-null="true"/>
        </many-to-one>

        <many-to-one name="status" class="com.globallogic.store.model.Status" fetch="select" lazy="false">
            <column name="status_id" not-null="true"/>
        </many-to-one>

        <set name="items" table="order_details" catalog="public" lazy="false" fetch="select" cascade="all">
            <key>
                <column name="order_id" not-null="true"/>
            </key>

            <many-to-many entity-name="com.globallogic.store.model.OrderItem">
                <column name="order_item_id" not-null="true"/>
            </many-to-many>
        </set>

    </class>
</hibernate-mapping>